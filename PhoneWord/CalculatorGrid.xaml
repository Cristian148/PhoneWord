<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneWord.CalculatorGrid"
             Title="CalculatorGrid">
    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,*,Auto,Auto,Auto" Padding="20">
        <Label Text="Bill" Grid.Column="0" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center" />
        <Entry x:Name="billInput"  Grid.Column="1" Grid.Row="0" Placeholder="Ingrese monto" Keyboard="Numeric" />

        <Label Text="Tip"  Grid.Column="0" Grid.Row="1" />
        <Label x:Name="TipOutput"  Grid.Column="1" Grid.Row="1" Text="0.00" />

        <Label Text="Total"  Grid.Column="0" Grid.Row="2" />
        <Label x:Name="TotalOutput" Grid.Column="1" Grid.Row="2" Text="0.00" />

        <Label Text="Tip Perception" VerticalOptions="End" Grid.Column="0" Grid.Row="3" />
        <Label x:Name="tipPerception" VerticalOptions="End" HorizontalOptions="End" Text="15%"  Grid.Column="1" Grid.Row="3" />

        <Slider x:Name="tipPerceptionSlider" Grid.Row="4" Grid.ColumnSpan="2" Minimum="0" Maximum="100" Value="15" />

        <Button Text="15%" Margin="5" Grid.Column="0" Grid.Row="5" Clicked= "btnTip_Clicked" />
        <Button Text="20%" Margin="5"  Grid.Column="1" Grid.Row="5" Clicked ="btnGenerous_Clicked" />
        <Button Text="Round Down" Margin="5" Grid.Column="0" Grid.Row="6"  x:Name="btnRoundDown" />
        <Button Text="Round Up" Margin="5"  Grid.Column="1" Grid.Row="6"  x:Name="btnRoundUp" />
    </Grid>
</ContentPage>