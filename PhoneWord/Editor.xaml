<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneWord.Editor"
             Title="Editor">
    <VerticalStackLayout Margin="30,60,30,30">
        <Label
            Text="Notas!"
            VerticalOptions="Center"
            HorizontalOptions="Center" FontAttributes="Bold" />

        <Entry x:Name="editor"
               Placeholder="Intoduce tus notas"
               HeightRequest="100" />

        <Grid ColumnDefinitions="Auto,30,Auto">

            <Button Grid.Column="0" Text="Guardar" WidthRequest="100" Clicked="Button_Clicked_Save"></Button>
            <Button Grid.Column="2" Text="Ellimnar" WidthRequest="100" Clicked="Button_Clicked_Delete"></Button>
        </Grid>
    </VerticalStackLayout>
</ContentPage>